    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>
        function verifyPassword() {
            var pw = document.getElementById("password").value;
            let pw2 = document.getElementById("re_password").value;
            //check empty password field
            if (pw == "") {
                swal("Password", "cannot be empty", "error")
                return false;
            }

            //minimum password length validation
            else if (pw.length < 8) {
                // document.getElementById("message").innerHTML = "**Password length must be atleast 8 characters";
                swal("Password must be ", "Greater than 8 Characters", "error")
                return false;
            } else if (pw.length > 16) {
                // document.getElementById("message").innerHTML = "**Password length must be atleast 8 characters";
                swal("Password must be ", "Less than 16 Characters", "error")
                return false;
            } else {
                if (pw2 == "") {
                    swal("Confirm Password", "cannot be empty", "error")
                    return false;
                } else if (pw != pw2) {
                    swal("Passwords", "Do Not Match", "error")
                    return false;
                } else {
                    swal("Registered successfully", "Welcome", "success")
                    return true;
                }
            }


        }
    </script>
